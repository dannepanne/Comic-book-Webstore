@page
@model ComicWebstoreExa.Pages.Cart.CartModel
@{
}

@if (Model.CurrentCart.ProductsInCart.Count != 0)
{
    @foreach (var item in Model.CurrentCart.ProductsInCart)
    {
        <div class="card text-center">
            <div class="card-header">
                @item.ProductName
                @item.ProductPrice
            </div>
            <div class="card-body">

            </div>

        </div>
    }
    <div class="card-text"> @Model.ProductsTotal(Model.CurrentCart)  </div>


}
@if (Model.CurrentCart.ProductsInCart.Count == 0)
{
<div>

    <h3>  Oh no  </h3>


    <h3>  Your shoppingcart is empty, buy something!  </h3>

    <img src="https://images.vectorhq.com/images/previews/c4c/sad-face-psd-435389.png" alt="SADFACE" />

</div>


}


