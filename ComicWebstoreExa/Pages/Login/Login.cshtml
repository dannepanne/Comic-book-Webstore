@page
@model ComicWebstoreExa.Pages.Login.LoginModel
@{
}
<div>

    <h3>  Choose Customer:  </h3>

</div>


@foreach (var item in Model.Customers)
{
    <div class="card text-center">
        <div class="card-header">
            @item.FirstName @item.LastName
        </div>
        <div class="card-body">
            <form asp-page-handler="Login">

                <input type="hidden" asp-for="ID" value="@item.CustomerID" />
                <button type="submit">Login @item.FirstName</button>
            </form>
        </div>

    </div>

}